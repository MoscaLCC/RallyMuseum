                                img(src="/images/" + val['pi'].value + ".png" style="width: 25px;height: 20px;")
                        td
                            a(href="/"+val['part'].value  style = "display:block; width:100%; height:100%; border:none; outline:none; text-decoration:none; color:inherit;")
                                p= val['pn'].value + " " + val['pa'].value
                        td
                            a(href="/"+val['part'].value  style = "display:block; width:100%; height:100%; border:none; outline:none; text-decoration:none; color:inherit;")
                                img(src="/images/" + val['ci'].value + ".png" style="width: 25px;height: 20px;")
                        td
                            a(href="/"+val['part'].value  style = "display:block; width:100%; height:100%; border:none; outline:none; text-decoration:none; color:inherit;")
                                p= val['cn'].value + " " + val['ca'].value
                        td
                            a(href="/"+val['part'].value  style = "display:block; width:100%; height:100%; border:none; outline:none; text-decoration:none; color:inherit;")
                                p= val['class'].value

                