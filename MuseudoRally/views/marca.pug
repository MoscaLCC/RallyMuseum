extends layout

block content
    
    center
        p(style="font-size:100px;text-shadow: 2px 2px black;text-align: center;color:white;vertical-align: middle;")=info.nome.value
                    
    center
        tabel(class="w3-table w3-card-4 w3-opacity-min w3-black" style="width:15%;margin:auto;")
            br
            tr
                td
                    p="Logo: "
                        img(src="/images/"+ info.img.value+".png" style="height:30px;align:right")
            br
            tr
                td  
                    p="Pais: "
                        img(src="/images/"+ info.pimg.value+".png" style="height:25px;align:right")
            br
            if infodbp
                if infodbp.link
                    tr
                        td
                            center
                                a(href=infodbp.link.value)
                                    p(class="w3-button w3-black w3-border w3-opacity-min w3-border-red w3-round-large")=info.nome.value              
            br
    br
    if infodbp
        if infodbp.text
            center
                div(class="w3-table w3-hoverable w3-card-4 w3-opacity-min w3-black" style="width:75%")
                    p(style="font-size:20px;text-shadow: 2px 2px black;text-align: center;color:white;vertical-align: middle;")= infodbp.text.value                   
    br
    
    br
    center
        h1(style="font-size:50px;text-shadow: 2px 2px black;text-align: center;color:white;vertical-align: middle;")="Carros"
    center
        div(class="w3-container")    
        table(class="w3-table w3-hoverable w3-card-4 w3-opacity-min w3-black" style="margin:auto;width:50%;")
            tr
                td Carro
                td Modelo
                td Vers√£o
            each val in carros
                tr
                    td
                        a(href="/carro/"+val.mat.value  style = "display:block; width:100%; height:100%; border:none; outline:none; text-decoration:none; color:inherit;")
                            p= val.mat.value 
                    td
                        a(href="/carro/"+val.mat.value  style = "display:block; width:100%; height:100%; border:none; outline:none; text-decoration:none; color:inherit;")
                            p= val.mod.value 
                    td
                        a(href="/carro/"+val.mat.value  style = "display:block; width:100%; height:100%; border:none; outline:none; text-decoration:none; color:inherit;")
                            p= val.vers.value     