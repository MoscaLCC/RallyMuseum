                  a(href="https://www.acp.pt/Inicio")
                    img(src="/images/acp.png" style="height:30px;")
                td(style="width:40%;")
                td
                  a(href="https://www.fia.com/")
                    img(src="/images/fia.png" style="height:30px;")
                td
                  a(href="http://www.wrc.com/pt/")
                    img(src="/images/wrc.png" style="height:30px;")
                td
                  a(href="http://www.fpak.pt/")
                    img(src="/images/fpak.png" style="height:30px;")
