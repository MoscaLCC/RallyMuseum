                td
                  a(href="/news" class="w3-btn w3-border w3-round-large")
                    img(src="/images/news.png" style="height:25px;width:25px;")
                td
                  a(href="https://www.ralis.fpak.pt/calendario/114" class="w3-btn w3-border w3-round-large")
                    img(src="/images/calendario.png" style="height:25px;width:25px;")
                td
                  a(href="/marcas" class="w3-btn w3-border w3-round-large")
                    img(src="/images/marc.png" style="height:25px;width:25px;")
