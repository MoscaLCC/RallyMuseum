            input(class="w3-input w3-border w3-white w3-round-large" type="text" placeholder="Pesquisar" id="pesquisa")
          td
            button(class="w3-btn w3-border w3-border-white w3-round-large" onclick="pesquisa()"): img(src="/images/lupa.png" style="height:25px;width:25px;")
          td(style="width:20%;")
          td
            table
              tr
                td
                  a(href="/home" class="w3-btn w3-border w3-round-large")
